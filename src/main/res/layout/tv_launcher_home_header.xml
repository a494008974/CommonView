<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="110dp">
    <ImageView
        android:id="@+id/launcher_logo"
        android:layout_width="0dp"
        android:layout_weight="0.6"
        android:visibility="invisible"
        android:alpha="0.8"
        android:scaleType="fitCenter"
        android:layout_height="match_parent"
        android:src="@drawable/launch_logo"/>

    <me.jessyan.armscomponent.commonres.view.GMarqueeTextView
        android:id="@+id/launcher_msg"
        android:layout_width="0dp"
        android:layout_weight="2.4"
        android:visibility="invisible"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:gravity="left|bottom"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/launcher_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/public_white"
            android:alpha="0.8"
            android:textSize="@dimen/public_font_32sp"
            />

        <TextView
            android:id="@+id/launcher_statu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/public_white"
            android:layout_marginLeft="10dp"
            android:alpha="0.6"
            android:textSize="@dimen/public_font_24sp"
            />

        <TextView
            android:id="@+id/launcher_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="@color/public_white"
            android:singleLine="true"
            android:alpha="0.6"
            android:textSize="@dimen/public_font_24sp"
            />

        <TextView
            android:id="@+id/launcher_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/public_white"
            android:layout_marginLeft="15dp"
            android:singleLine="true"
            android:alpha="0.6"
            android:textSize="@dimen/public_font_24sp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.3"
        android:gravity="bottom"
        android:paddingBottom="15dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/launcher_net"
            android:layout_width="40dp"
            android:src="@drawable/launcher_iv_unnet"
            android:scaleType="fitCenter"
            android:layout_height="40dp"/>
    </LinearLayout>

</LinearLayout>